<div id="conversation">
  <div class="row">
    <div class="col-12 top-bar">
      <i class="fa fa-times fa-2x text-muted float-right close-conversation"></i>
      <%= link_to image_tag(@users.first.image, width: "40px", heigth: "40px", class: "profile-thumb rounded-circle mr-3"), "#"%>
      <p class="text-muted mt-2">You matched with <%= @users.first.first_name %> on 12/11/2020</p>
    </div>
  </div>


<div class="row">
  <div class="col-12 text-center">
    <p class="mt-3">You matched with <span><%= @users.first.first_name %></span> <%= time_ago_in_words @users.first.created_at %> ago</p>

    <%= link_to image_tag(@users.first.image, width: "200px", heigth: "200px", class: "rounded-circle mt-3 mb-5"), "#"%>


    <p>Send them a message :)</p>
  </div>
</div>

  <div class="row">
    <div class="col-sm-12 mt-5 bottom-bar">
      <form>
        <div class="input-group">
          <input type="text" name="message" value="" placeholder="Enter your message and press send" class="form-control form-control-lg">
          <div class="input-group-append">
            <input type="submit" name="submit" value="Send" class="btn btn-success btn-lg pl-5 pr-5">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
